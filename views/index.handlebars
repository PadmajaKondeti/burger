<div class="jumbotron">
<h1>
Eat-De-Burger</h1>
<img src="/assets/img/burger.png" alt="burger" height="42" width="42"/>
</div>
<!--div class= "devoured"-->
<div class="container">
  <div class= "undev col-xs-12 col-md-5" >
    <h2>Ready to devoured!</h2>
    <ol>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
           <form action="burgers/update/{{this.id}}?_method=PUT" method="POST"> <!-- <div class="form-group"> -->
              {{this.burger_name}}
              <input type="hidden" name="devoured" value="true">
              <button class="bttn-burger" type="submit">Devoure it!</button>  
              <!-- </div> -->
            </form>
       <!--  </div> -->
          </li>
        {{/unless}}
      {{/each}}
    </ol>
  </div>
  <div class= "devoured col-xs-12 col-md-5 " >
    <h2>Devoured!</h2>
    <ol>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
              <input type="hidden" name="devoured" value="false">
              {{this.burger_name}}
          </li>
        {{/if}}
      {{/each}}
    </ol>
  </div>
</div>
<hr>
<br>
<div class="add-bur">
  <p>Enter a burger you want to eat Click the "Submit" button"</p>
  <form class="create-update-form" action="burgers/create" method="POST">
    <h2>Add a burger</h2>
      <div class="form-group">
        <label for="bur">Burger Name:</label>
        <input type="text" id="bur" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
   </form>
</div>