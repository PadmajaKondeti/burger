<h1><img src="../public/assets/img/burger.png" alt="burger" height="42" width="42"><h2>
<h2>Eat-De-Burger</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Submit!</button>
          <p>Enter a burger you want to eat Click the "Submit" button"</p>p>
        </form>

        {{> burgers/devoured-it}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

